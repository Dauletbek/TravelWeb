@model TravelWeb.Models.Travel

@{
    ViewBag.Title = "Create";
}

<h2>Бүртгэх</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Аялалууд</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2">Аялал нэр</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Эхлэх газар</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartFrom)
                @Html.ValidationMessageFor(model => model.StartFrom)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Очих газар</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndTo)
                @Html.ValidationMessageFor(model => model.EndTo)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Аялал төрөл</label>
            <div class="col-md-10">
                @Html.DropDownList("TravelTypeID", String.Empty)
                @Html.ValidationMessageFor(model => model.TravelTypeID)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Хөтөч</label>
            <div class="col-md-10">
                @Html.DropDownList("guiderID", String.Empty)
                @Html.ValidationMessageFor(model => model.guiderID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Буцах", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
