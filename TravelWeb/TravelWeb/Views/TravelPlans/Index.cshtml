@model IEnumerable<TravelWeb.Models.TravelPlan>

@{
    ViewBag.Title = "Index";
}

<h2>Аялал дэлгэрэнгүй</h2>

<p>
    @Html.ActionLink(" Бүртгэх", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Үнэ
        </th>
        <th>
            Эхлэх өдөр
        </th>
        <th>
            Дуусах өдөр
        </th>
        <th>
            Мэдээлэл
        </th>
        <th>
            Аялал ID
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelID)
        </td>
        <td>
            @Html.ActionLink("Засах", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Дэлгэрэнгүй", "Details", new { id=item.ID }) |
            @Html.ActionLink("Устгах", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
