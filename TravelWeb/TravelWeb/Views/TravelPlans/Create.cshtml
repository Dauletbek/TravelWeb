@model TravelWeb.Models.TravelPlan

@{
    ViewBag.Title = "Create";
}

<h2>Бүртгэх</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Аялал дэлгэрэнгүй</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2">Үнэ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.price)
                @Html.ValidationMessageFor(model => model.price)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Эхлэх өдөр</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.startDate, new { @type = "date" })
                @Html.ValidationMessageFor(model => model.startDate)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Дуусах өдөр</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.endDate, new { @type = "date" })
                @Html.ValidationMessageFor(model => model.endDate)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Мэдээлэл</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.detail)
                @Html.ValidationMessageFor(model => model.detail)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Аялал</label>
            <div class="col-md-10">
                @Html.DropDownList("travelID", String.Empty)
                @Html.ValidationMessageFor(model => model.TravelID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Буцах", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
