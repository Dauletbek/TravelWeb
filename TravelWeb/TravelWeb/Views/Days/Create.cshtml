@model TravelWeb.Models.Day
@{
    ViewBag.Title = "Create";
}
<h2>Бүртгэх</h2>
@using (Html.BeginForm())
{ 
    <div class="form-horizontal">
        <h4>Өдөрүүд</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2">Хэддэх өдөр</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.day)
                @Html.ValidationMessageFor(model => model.day)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Мэдээлэл</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.detail)
                @Html.ValidationMessageFor(model => model.detail)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Хэдэн өдөр болох</label>
            <div class="col-md-10">
                @Html.DropDownList("travelPlanID", String.Empty)
                @Html.ValidationMessageFor(model => model.travelPlanID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Буцах", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
