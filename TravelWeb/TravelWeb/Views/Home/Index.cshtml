@model IEnumerable<TravelWeb.Models.TravelPlan>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!--slider-->
<div class="slider">
    <ul id="hero-gallery" class="cS-hidden">
        <li data-thumb="images/uploads/slider7.jpg">
            <img src="@Url.Content("~/images/uploads/slider7.jpg")" alt="" />
        </li>
        <li data-thumb="images/uploads/slider3.jpg">
            <img src="@Url.Content("~/images/uploads/slider3.jpg")" alt="" />
        </li>
        <li data-thumb="images/uploads/slider2.jpg">
            <img src="@Url.Content("~/images/uploads/slider2.jpg")" alt="" />
        </li>
    </ul>
</div>
<!--//slider-->

<!--main-->
<main class="main">
    <div class="wrap">
        <div class="row">
            <div class="full-width">

                <!--latest offers-->
                <header class="s-title">
                    <h2>Манай Аялалууд </h2>
                </header>

                <div class="offers">
                    <div class="row">
                        <!--column-->
                        @foreach (var item in Model)
                        {
                             <!--deal-->
                            <article class="one-fourth">
                                <figure><a href="@Url.Action("TravelDetail","Home",new {id=item.ID })" title=""><img style="width:100%" src="@Url.Content(@item.travel.images.First().source)" alt="" /></a></figure>
                                <div class="details">
                                    <h3>
                                        @item.travel.Name
                                        <span class="stars">
                                            <i class="material-icons">&#xE838;</i>
                                            <i class="material-icons">&#xE838;</i>
                                            <i class="material-icons">&#xE838;</i>
                                            <i class="material-icons">&#xE838;</i>
                                        </span>
                                    </h3>
                                    <span class="address"><a href="#">@item.travel.StartFrom -> @item.travel.EndTo</a></span>
                                    <span class="rating"> 8 /10</span>
                                    <span class="price">Аялалын үнэ:  <em>@item.price ₮ </em> </span>
                                    <span class="price">Хөтөч:  <em>@item.travel.guider.lastName @item.travel.guider.firstName </em> </span>
                                    <div class="description">
                                        <p>@item.detail <a href="@Url.Action("TravelDetail","Home",new {id=item.ID })">Дэлгэрэнгүй</a></p>
                                    </div>
                                    <a href="@Url.Action("TravelDetail","Home",new {id=item.ID })" title="Book now" class="gradient-button">Захиалах</a>
                                </div>
                            </article>
                        <!--//deal-->
                        }
                    </div>
                </div>
                <!--//latest offers-->

                <header class="s-title">
                    <h2>Та үнэгүй аялалмаар байна уу</h2>
                </header>

                <!--top destinations-->
                <div class="destinations">
                    <div class="row">
                        <!--column-->
                        <article class="one-fourth">
                            <figure><a href="location.html" title=""><img src="@Url.Content("~/images/uploads/paris.jpg")" alt="" /></a></figure>
