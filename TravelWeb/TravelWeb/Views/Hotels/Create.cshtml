@model TravelWeb.Models.Hotel

@{
    ViewBag.Title = "Create";
}

<h2>Бүтгэх</h2>


@using (Html.BeginForm("Create", "Hotels", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Зочид буудал</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2">Зочид буудал нэр</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Мэдээлэл</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.detail)
                @Html.ValidationMessageFor(model => model.detail)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Өрөө</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.room)
                @Html.ValidationMessageFor(model => model.room)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Үнэ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.price)
                @Html.ValidationMessageFor(model => model.price)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Багтах хүний тоо</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.maxPerson)
                @Html.ValidationMessageFor(model => model.maxPerson)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Зураг</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.File, new { @type = "file" })
                @Html.ValidationMessageFor(model => model.File)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Аялал</label>
            <div class="col-md-10">
                @Html.DropDownList("TravelID", String.Empty)
                @Html.ValidationMessageFor(model => model.TravelID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Буцах", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
