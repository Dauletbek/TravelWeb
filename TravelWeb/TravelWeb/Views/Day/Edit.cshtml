@model TravelWeb.Models.Day

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Day</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.dayID)

        <div class="form-group">
            @Html.LabelFor(model => model.day, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.day)
                @Html.ValidationMessageFor(model => model.day)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.detail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.detail)
                @Html.ValidationMessageFor(model => model.detail)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.travelPlanID, "travelPlanID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("travelPlanID", String.Empty)
                @Html.ValidationMessageFor(model => model.travelPlanID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
